    <form method="post" action="">
      <div class="row">
        <span class="col-lg-2"></span>
        <label class="col-lg-2">Tên sản phẩm: </label>
        <input class="col-lg-4" required type="text" id="nameSP" name="tenSP" placeholder="Nhập Tên sản phẩm" value="{{data.tenSP}}">
      </div><br>

      <div class="row">
        <span class="col-lg-2"></span>
